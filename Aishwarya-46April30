#Identify error
try:
	print('Hyd')
	print('Sec')
	print('Cyb')
#Error : no except or finally block



#Find outputs
#print(7/0)   #ZeroDivisionError
try:
	print(7/0)
except ZeroDivisionError:
	print('Division by zero is not permitted') #1st line in o/p
#print(7/0)   #ZeroDivisionError
print('Bye') #2nd line in o/p



#Identify error
except:           #Error : except without try
	print('Hyd')
	print('Sec')
	print('Cyb')



#Find outputs
try:
	print('One')    #One
	print('Two')    #Two
	print('Three')  #Three
#print('Four')      #Error : no except or finally after try
except:
	print('Five')
	print('Six')
	print('Seven')
print('Eight')      #Eight



#Identify error
try:
	print('try suite')
except:    #Error: default except must be at last
	print('default except')
except NameError:
	print('Name Error')



#Identify error
try:
	print('try suite')
except:          #Error : default except must be at last
	print('1st default except')
except:
	print('2nd default except')
