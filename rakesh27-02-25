# Complete the following program to find the area and perimeter of a rectangle.
length = int(input("Enter the length of rectangle: "))
breadth = int(input("Enter the breadth of rectangle: "))
area = length * breadth
perimeter = 2 * (length + breadth)
print(f"Area : {area}")
print(f"Perimeter : {perimeter}")

# Complete the following program to find the volume of a sphere.

from math import *
radius = int(input("Enter the radius of sphere: "))
volume = 4/3 * pi * radius ** 3
print(f"Volume : {volume}")

# Complete the following program to find the simple interest and compond interest.

principal = int(input("Enter the principal amount: "))
rate = int(input("Enter the rate of interest: "))
time = int(input("Enter the time in years: "))
simple_interest = principal * rate * time / 100
compound_interest = principal * (1 + rate / 100) ** time
print(f"Simple Interest : {simple_interest}")
print(f"Compound Interest : {compound_interest}")

# Write  a  program  to  swap  values  of  two  objects  using  3rd   object

x = int(input("Enter 1st input : "))
y = int(input("Enter 2nd input : "))
print(f"Before swap : x={x} y={y}")
temp = x
x = y
y = temp
print(f"After swap : x={x} y={y}")

# Write  a  program  to  swap  values  of  two  objects  without  using  3rd  object
# Hint: One  addition  and  two  subtractions

x = int(input("Enter 1st input : "))
y = int(input("Enter 2nd input : "))
print(f"Before swap : x={x} y={y}")
a=a+b 
a=a-b
b=a-b
print(f"After swap : x={x} y={y}")

# Write  a  program  to  swap  values  of  two  objects  without  using  3rd  object
# Hint: One  multiplication  and  two  divisions

x = int(input("Enter 1st input : "))
y = int(input("Enter 2nd input : "))
print(f"Before swap : x={x} y={y}")
x=x*y
x=x/y
y=y/x
print(f"After swap : x={x} y={y}")


# Write  a  program  to  add ,  subtract , multiply  and  divide  two  complex  numbers

x=complex(input("Enter the first complex number : "))
y=complex(input("Enter the second complex number : "))
print(f"Sum : {x+y}")
print(f"difference : {x-y}")
print(f"product : {x*y}")
print(f"division : {x/y}")

# Write  a  program  to  determine  sum , difference , product , quotient , largest  and  smallest  of  two  numbers.
# Also  find  remainder,  sqrt  of  first  input , power, gcd  and  factorial  of  first  input

x=int(input("enter the first number : "))
y=int(input("enter the second number : "))
print(f"Sum : {x+y}")
print(f"difference : {x-y}")
print(f"product : {x*y}")
print(f"division : {x/y}")
print(f"remainder : {x%y}")
print(f"sqaure root of first input : ",sqrt(x))
print(f"power x , y : ",pow(x,y))
print(f"GCD  : ",gcd(x,y))
print(f"factorial : ",factorial(x))

# Write  a  program  to  swap  values  of  any  two  objects  in  a  single  statement  without  using  3rd  object

x = input("Enter 1st input : ")
y = input("Enter 2nd input : ")
print(f"Before swap : x={x} y={y}")
x,y = y,x
print(f"After swap : x={x} y={y}")


# Write  a  program  to  determine  largest  of  two  inputs  without  using  max()  function

x = eval(input("Enter 1st input : "))
y = eval(input("Enter 2nd input : "))
print("Largest Input : ", max(x,y))



# Write  a  program  to  print   '>'  if  1st  input  >  2nd  input, '<'  if  1st  input  <  2nd  input  and '='  if  inputs  are  same

x = eval(input("Enter 1st input : "))
y = eval(input("Enter 2nd input : "))
if x<y:
    print('<')
elif x==y:
    print('=')
else:
    print('>')


# Write  a  program  to  print  1  if  input  is  +ve  ,  -1    if  input  is  -ve  and  0  if  input  is  0

x = eval(input("Enter 1st input : "))
if x<0:
    print('-1')
elif x==0:
    print('0')
else:
    print('1')

# Write  a  program  to  test  input  is  even  number  or  odd  number

x = eval(input("Enter 1st input : "))
if x%2==0:
    print('even')
else:
    print('odd')
